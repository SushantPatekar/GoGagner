<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>


            <item>
                <shape>
                    <gradient
                        android:type="linear"
                        android:startColor="#28275F"
                        android:endColor="#28283F"
                        android:centerColor="#9292b9"
                        android:angle="270" />
                    <solid android:color="#282843" />
                    <stroke android:width="3dp" android:color="#222338" />

                    <padding android:bottom="3dp" android:left="5dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:left="8dp">

                <bitmap android:gravity="center_vertical|left" android:src="@drawable/city" />

            </item>



            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow_down" />

            </item>
        </layer-list>

    </item>

</selector>