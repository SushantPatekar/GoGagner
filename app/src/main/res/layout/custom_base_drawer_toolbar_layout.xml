<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivGGlogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:src="@drawable/gg_white" />

            <custom.customEditTextView
                android:id="@+id/edsearch"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:textColorHint="@color/white_txt"
                android:paddingLeft="@dimen/size_10"
                android:layout_margin="@dimen/size_5"
                android:layout_toRightOf="@id/ivGGlogo"
                android:background="@drawable/bg_dashboard_search"
                android:drawablePadding="@dimen/size_10"
                android:drawableRight="@drawable/ic_category_search"
                android:hint="@string/search_hint"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>