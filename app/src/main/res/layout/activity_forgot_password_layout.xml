<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <ImageView
        android:id="@+id/aboverBanner"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/splash_screen_upper_logo" />


    <custom.customTextView
        android:id="@+id/tvOtpTimer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_below="@id/aboverBanner"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginRight="@dimen/size_30"
        android:gravity="center_horizontal"
        android:text="@string/lbl_otp_reminder"
        android:textColor="@color/white_txt"

        android:textSize="@dimen/text_size_12"

        />

    <LinearLayout
        android:id="@+id/linear_otp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tvOtpTimer"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:weightSum="175">

        <custom.customEditTextView
            android:id="@+id/otp_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="@drawable/bg_edittext_icon"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="@dimen/size_5"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/text_size_22" />

        <custom.customEditTextView
            android:id="@+id/otp_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="@drawable/bg_edittext_icon"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="@dimen/size_5"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/text_size_22" />
        <custom.customEditTextView

            android:id="@+id/otp_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="@drawable/bg_edittext_icon"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="@dimen/size_5"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/text_size_22" />

        <View
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"/>
        <custom.customEditTextView
            android:id="@+id/otp_d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="@drawable/bg_edittext_icon"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="@dimen/size_5"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/text_size_22" />

        <custom.customEditTextView
            android:id="@+id/otp_e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="@drawable/bg_edittext_icon"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="@dimen/size_5"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/text_size_22" />
        <custom.customEditTextView
            android:id="@+id/otp_f"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="@drawable/bg_edittext_icon"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="@dimen/size_5"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/text_size_22" />
    </LinearLayout>
    <custom.customButton

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/lbl_otp_verify"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/text_size_15"
        android:layout_below="@id/linear_otp"
        android:textColor="@color/white_txt"
        android:textAllCaps="true"      android:textSize="@dimen/text_size_12"
        android:background="@drawable/custom_bg_login"
        android:id="@+id/btnSubmitOTP"/>


    <custom.customTextView
        android:id="@+id/tvResendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="dfhsjhf"
        android:textSize="@dimen/text_size_12"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/text_size_12"
        android:layout_below="@id/btnSubmitOTP"
        android:textColor="@color/white_txt"/>
</RelativeLayout>