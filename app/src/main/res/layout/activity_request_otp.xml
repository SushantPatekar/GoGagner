<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <ImageView
        android:id="@+id/aboverBanner"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/splash_screen_upper_logo" />


    <custom.customTextView
        android:id="@+id/tvRegisterOTP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_below="@id/aboverBanner"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginRight="@dimen/size_30"
        android:gravity="center"
        android:text="@string/lbl_register_hint"
        android:textColor="@color/white_txt"

        android:textSize="@dimen/text_size_12"

        />

    <custom.customEditTextView
        android:id="@+id/edRegisterOTP"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvRegisterOTP"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/size_20"
        android:background="@drawable/bg_edittext_icon"
        android:drawablePadding="20dp"
        android:inputType="text"
        android:maxLines="1"

        android:gravity="center"
        android:padding="12dp"
        android:textAllCaps="true"
        android:textColor="@color/white_txt"
        android:textColorHint="@color/white_txt"
        android:textSize="@dimen/text_size_12" />

    <custom.customButton

        android:id="@+id/btnRegisterOTP"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/edRegisterOTP"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/text_size_15"
        android:layout_marginRight="@dimen/size_20"
        android:background="@drawable/custom_bg_login"
        android:text="@string/lbl_request_otp"
        android:textAllCaps="true"
        android:textColor="@color/white_txt"
        android:textSize="@dimen/text_size_12" />



</RelativeLayout>