<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context="gogagner.goldenbrainsithub.com.SplashActivity">

    <ImageView
        android:id="@+id/aboverBanner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_screen_upper_logo" />

    <!--  -->
    <custom.customBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="@string/lbl_powerd_by"
        android:textSize="10dp"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_txt"
        android:layout_marginBottom="50dp"
 />

    <ImageView
        android:id="@+id/bottomBanner"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/text_size_12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_screen_bottom_logo" />

</RelativeLayout>